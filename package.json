{
  "name": "gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/server --ext ts,js --delay 1s",
    "introspect:dev:covies": "rover subgraph introspect http://localhost:3001/graphql > ./src/graphql/generated/covies.graphql",
    "introspect:dev:coeathers": "rover subgraph introspect http://localhost:3002/graphql > ./src/graphql/generated/coeathers.graphql",
    "introspect:dev:all": "rover subgraph introspect http://localhost:3001/graphql > ./src/graphql/generated/covies.graphql && rover subgraph introspect http://localhost:3002/graphql > ./src/graphql/generated/coeathers.graphql",
    "compose": "rover supergraph compose --config ./supergraph-config.yaml > ./src/graphql/generated/supergraph.graphql",
    "subgraph:list": "rover subgraph list cateway-production@current"
  },
  "author": "Codeliner <codeliners96@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@apollo/gateway": "^0.46.0",
    "@babel/preset-env": "^7.16.8",
    "apollo-server": "^3.6.1",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.8",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
